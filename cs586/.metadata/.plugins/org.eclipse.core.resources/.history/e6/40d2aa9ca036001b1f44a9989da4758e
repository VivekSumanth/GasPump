package StateClasses;

import MDA_EFSM.mda_efsm;
import OutputClasses.Output;
/*
 * At this State only PayCash() is Invoked.
 */
public class S1 extends State {
	
	public int id = 2;
	
	public S1(mda_efsm mda_efsm) {
		super(mda_efsm);
	}

	public void Activate() {
		notatthisstatemsg();
	}
	
	//PayCash Method invokes StoreCash and DisplayMenu in Output Class
	public void PayCash() {
		this.efsm.getOp().StoreCash();
		this.efsm.getOp().DisplayMenu();
	}
	
	public void PayCredit() {
		this.efsm.getOp().setWValue(1);
	}
	
	public void PayDebit() {
		this.efsm.getOp().StorePin();
		this.efsm.getOp().EnterPinMsg();
		this.efsm.getOp().setWValue(0);
	}
	
	public void CorrectPin() {
		notatthisstatemsg();
	}
	
	public void InCorrectPin() {
		notatthisstatemsg();
	}
	
	public void TooManyAttempts() {
		notatthisstatemsg();
	}
	
	public void SelectGas(int g) {
		notatthisstatemsg();
	}
	
	public void Pump() {
		notatthisstatemsg();
	}
	
	public void Approved() {
		notatthisstatemsg();;
	}
	
	public void Reject() {
		notatthisstatemsg();
	}
	
	public void Cancel() {
		notatthisstatemsg();
	}
	
	public void StartPump() {
		notatthisstatemsg();
	}
	
	public void PumpLiter() {
		notatthisstatemsg();
	}
	
	public void StopPump() {
		notatthisstatemsg();
	}
	
	public void Start() {
		notatthisstatemsg();
	}
	
	public int getStateId() {
		return this.id;
	} 
	

}
